# 셀레니움 설정
import time
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.service import Service

options = webdriver.ChromeOptions()
options.add_argument('--headless')
options.add_argument('--no-sandbox')
options.add_argument('--disable-dev-shm-usage')

webdriver_service = Service('/usr/bin/chromedriver')
driver = webdriver.Chrome(service = webdriver_service, options=options)
url = 'https://www.yna.co.kr/theme/mostviewed/index'
driver.get(url)

# 크롤링한 데이터를 리스트에 저장
columns = ['순위', '기사 제목', '업로드 시간']
rank = []
title = []
upload_time = []

for i in range(1, 20):
  rank.append(i)
  title.append(driver.find_element(By.CSS_SELECTOR, '#container > div > div.content03 > section > div > ul > li:nth-child('+ str(i) +') > div > div > strong > a > span').text)
  upload_time.append(driver.find_element(By.CSS_SELECTOR, '#container > div > div.content03 > section > div > ul > li:nth-child('+ str(i) +') > div > div > span').text)

# 리스트를 데이터프레임으로 변환
import pandas as pd

df = pd.DataFrame({columns[0] : rank,
                   columns[1] : title,
                   columns[2] : upload_time}, columns = columns)
df.head()

# 데이터프레임을 CSV 파일로 저장
df.to_csv('top19_news.csv', index = False)

# 한글 폰트 설치
!sudo apt-get install -y fonts-nanum
!sudo fc-cache -fv
!rm ~/.cache/matplotlib -rf

# 기사 제목 텍스트 준비
import csv

# CSV 파일 읽어오기
f = open('top19_news.csv', 'r')
rdr = csv.reader(f)
f.close

title = ''
for line in rdr:
  title = title + ' ' + line[1]
print(title)

# 문자열 슬라이싱
# 인덱스 0~5를 제외하고 6부터 슬라이싱하기
title = title[6:]
print(title)

# 라이브러리
!pip install konlpy

from wordcloud import WordCloud
import matplotlib.pyplot as plt
from collections import Counter
from konlpy.tag import Okt
import numpy as np

# 워드클라우드 생성
# 문자열 분석하기
okt = Okt()
nouns = okt.nouns(title)
words = [n for n in nouns if len(n) > 1]
c = Counter(words)

# 워드클라우드 생성하기
wc = WordCloud(font_path='/user/share/fonts/truetype/nanum/NanumBarunGothic.ttf', scale=2.0, colormap='Spectral')
gen = wc.generate_from_frequencies(c)
plt.figure()
plt.imshow(gen)
